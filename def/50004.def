#交易开始 定义交易类型标识
CB                      #江苏农信终端平台交易类型
################ 输入输出交易局部变量定义 #################
#@ UI_VAR_BEGIN
INT iButton,iRet,i

CHAR sFuncCode = "0"

CHAR canReview
CHAR submitter
CHAR reviewer

CHAR sInput
CHAR sOutput

CHAR sHint

CHAR sTotalCount
CHAR sTotalAmount

CHAR asOut[100]

CHAR sYesterday

CHAR sSerialNo
CHAR sStatus


######################### 主程序流程 ##########################
#签到检查
CALL LIB "CBOD_public.SignCtrl" ( 0, 0 )
IF ( G_CALL_FLAG <= 0 )
    EXIT
ENDIF
#显示交易标题
CALL LIB  "CBOD_public.SetTradeTitle" ()
#清除交易画面
CALL LIB "CBOD_public.ClearTradeScreen" ()

WHILE (1)
        WHILE (1)
                CALL FUNC MainForm_Say ()                                                       # 交易主画面
                # CALL FUNC MainForm_SayValue ()                                          # 交易数据
                CALL FUNC MainForm_Get ()                                                       # 交易数据输入
                READ ()                                                                                         # 清除输入场
                iButton = CALL LIB "CBOD_public.TradeButton" (1)        # 交易按钮
                IF (iButton = 1)
                        CONTINUE
                ELSE
                        IF (iButton = 2)
                                BREAK
                        ELSE
                                EXIT
                        ENDIF
                ENDIF
        ENDWHILE

        # 按确定后的主机通讯
        iRet = CALL FUNC MainForm_PackComm ()
        IF (iRet = 0)
                CONTINUE
        ENDIF
        BREAK
ENDWHILE

# 显示主机返回的数据
CALL FUNC Data_Show ()
# 凭证自动打印（最后次通讯返回)
IF (sFuncCode = "1" || sFuncCode = "2")
        CALL LIB "CBOD_output.AutoPrint" ()
ENDIF
CALL LIB "CBOD_public.PromptMsg" ("交易成功, 按任意键退出!", 0)
# 按 ESC 或 · 退出交易
CALL LIB "CBOD_public.ExitTrade" ()
EXIT
####################### 主程序结束 ########################

###################### 交易函数定义 #######################

# 初始化交易画面
FUNC MainForm_Say ()
        @ 5,5   SAY "发送日期[                                      ]"
        @ 6,5   SAY "提示信息[                                      ]"
ENDFUNC

FUNC MainForm_Get ()
        @ 5,14 GET (sYesterday) PICTURE -10"X" \
        ONBLUR [FUNC Real_SayValue ()] \
        PROMPT "代发文件接收日期，一般为上一天"
ENDFUNC

FUNC Real_SayValue ()
    CALL LIB "CBOD_commun_afe.PackXmlTia" ("AFE001", "T", "CC0101301040")
	IF (G_CALL_FLAG = 0)
		RETURN 0
	ENDIF

    GR_XML_NODENAME[1] = "req_date"
    GR_XML_NODEVAR[1] = sYesterday

    CALL LIB "CBOD_commun_afe.PackXmlData" ("AFE001")
	IF (G_CALL_FLAG = 0)
		RETURN 0
	ENDIF

    ARRAYCLEAR("asOut")
    iRet = UNPACKCOMMBUF(G_FORMDATA[1], "CC0101301040g", "asOut")
    sSerialNo = TRIM(asOut[1])
    sStatus = TRIM(asOut[2])
    @ 6,14 SAY sSerialNo PICTURE -20"X"
    @ 7,14 SAY sStatus PICTURE -50"X"
ENDFUNC