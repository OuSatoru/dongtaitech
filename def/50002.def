################ 输入输出交易局部变量定义 #################
#@ UI_VAR_BEGIN
INT iButton,iRet,i

CHAR sFuncCode = "0"

CHAR canReview
CHAR submitter
CHAR reviewer

CHAR sInput
CHAR sOutput

CHAR sHint

CHAR sTotalCount
CHAR sTotalAmount

CHAR asOut[100]

CHAR sYesterday


######################### 主程序流程 ##########################
#签到检查
CALL LIB "CBOD_public.SignCtrl" ( 0, 0 )
IF ( G_CALL_FLAG <= 0 )
    EXIT
ENDIF
#显示交易标题
CALL LIB  "CBOD_public.SetTradeTitle" ()
#清除交易画面
CALL LIB "CBOD_public.ClearTradeScreen" ()

WHILE (1)
        WHILE (1)
                CALL FUNC MainForm_Say ()                                                       # 交易主画面
                CALL FUNC MainForm_SayValue ()                                          # 交易数据
                CALL FUNC MainForm_Get ()                                                       # 交易数据输入
                READ ()                                                                                         # 清除输入场
                iButton = CALL LIB "CBOD_public.TradeButton" (1)        # 交易按钮
                IF (iButton = 1)
                        CONTINUE
                ELSE
                        IF (iButton = 2)
                                BREAK
                        ELSE
                                EXIT
                        ENDIF
                ENDIF
        ENDWHILE

        # 按确定后的主机通讯
        iRet = CALL FUNC MainForm_PackComm ()
        IF (iRet = 0)
                CONTINUE
        ENDIF
        BREAK
ENDWHILE

# 显示主机返回的数据
CALL FUNC Data_Show ()
# 凭证自动打印（最后次通讯返回)
IF (sFuncCode = "1" || sFuncCode = "2")
        CALL LIB "CBOD_output.AutoPrint" ()
ENDIF
CALL LIB "CBOD_public.PromptMsg" ("交易成功, 按任意键退出!", 0)
# 按 ESC 或 ・ 退出交易
CALL LIB "CBOD_public.ExitTrade" ()
EXIT
####################### 主程序结束 ########################

