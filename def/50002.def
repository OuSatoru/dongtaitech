FUNC MainForm_Get ()
        @ 5,14 GET (sYesterday) PICTURE -10"X" \
        ONBLUR [FUNC Real_SayValue ()] \
        PROMPT "代发文件接收日期，一般为上一天"
ENDFUNC

FUNC Real_SayValue ()
    CALL FUNC Can_Review ()
    CALL FUNC AsignVal ()
    
    @ 6,14 SAY sTotalCount PICTURE -10"X"
    @ 7,14 SAY sTotalAmount PICTURE -20"X"
    @ 8,14 SAY sHint PICTURE -18"X"
ENDFUNC

FUNC Can_Review ()
    CALL LIB "CBOD_commun_afe.PackXmlTia" ("AFE001", "T", "CC0101301020")
	IF (G_CALL_FLAG = 0)
		RETURN 0
	ENDIF

    GR_XML_NODENAME[1] = "req_date"
    GR_XML_NODEVAR[1] = sYesterday

    CALL LIB "CBOD_commun_afe.PackXmlData" ("AFE001")
	IF (G_CALL_FLAG = 0)
		RETURN 0
	ENDIF

    ARRAYCLEAR("asOut")
    iRet = UNPACKCOMMBUF(G_FORMDATA[1], "CC0101301020g", "asOut")
    submitter = TRIM(asOut[1])
    reviewer = TRIM(asOut[2])

    @ 8,14 SAY reviewer PICTURE -20"X"

    IF (submitter = "")
        canReview = "false"
        sHint = "不可复核，请先提交批量代发信息"
    ELSE
        IF (submitter = G_TELLER)
            canReview = "false"
            sHint = "不得复核自己的"
        ELSE
            IF (reviewer <> "")
                canReview = "false"
                sHint = "已经复核"
            ELSE
                canReview = "true"
                sHint = "请复核人员在数据分析平台查看代发明细"
            ENDIF
        ENDIF
    ENDIF
ENDFUNC


FUNC AsignVal () 
    CALL LIB "CBOD_commun_afe.PackXmlTia" ("AFE001", "T", "CC0101301010")
	IF (G_CALL_FLAG = 0)
		RETURN 0
	ENDIF

    GR_XML_NODENAME[1] = "req_date"
    GR_XML_NODEVAR[1] = sYesterday

    CALL LIB "CBOD_commun_afe.PackXmlData" ("AFE001")
	IF (G_CALL_FLAG = 0)
		RETURN 0
	ENDIF

    ARRAYCLEAR("asOut")
    iRet = UNPACKCOMMBUF(G_FORMDATA[1], "CC0101301010g", "asOut")
    sTotalCount = asOut[1]
    sTotalAmount = asOut[2]
ENDFUNC

FUNC MainForm_PackComm ()
    IF (canReview = "true")
        CALL LIB "CBOD_commun_afe.PackXmlTia" ("AFE001", "T", "CC0101301021")
        IF (G_CALL_FLAG = 0)
            RETURN 0
        ENDIF

        GR_XML_NODENAME[1] = "req_date"
        GR_XML_NODEVAR[1] = sYesterday
        GR_XML_NODENAME[2] = "teller_no"
        GR_XML_NODEVAR[2] = G_TELLER
        GR_XML_NODENAME[3] = "total_count"
        GR_XML_NODEVAR[3] = sTotalCount
        GR_XML_NODENAME[4] = "total_amount"
        GR_XML_NODEVAR[4] = sTotalAmount

        CALL LIB "CBOD_commun_afe.PackXmlData" ("AFE001")
        IF (G_CALL_FLAG = 0)
            RETURN 0
        ENDIF
    ENDIF
ENDFUNC


